<div class="form-group">
  <label for="name">Name</label>
  {{input type="text"
          class="form-control"
          id="name"
          placeholder="Bottle Name"
          value=passwords.previous}}
</div>

<div class="form-group">
  <label for="winery">Winery</label>
  {{input type="text"
          class="form-control"
          id="winery"
          placeholder="Name of Winery"
          value=passwords.next}}
</div>


<div class="form-group">
  <label for="size">Bottle Size</label><br>
  <select id="size" class="form-control">
    <option value="Standard">Standard</option>
    <option value="Half">Half</option>
  </select>
</div>

<div class="form-group">
  <label for="location">Location</label>
  {{input type="text"
          class="form-control"
          id="location"
          placeholder="Location of Winery"
          value=passwords.next}}
</div>

<div class="form-group">
  <label for="vintage">Vintage</label>
  {{input type="text"
          class="form-control"
          id="vintage"
          placeholder="Vintage(Year)"
          value=passwords.next}}
</div>

<div class="form-group">
  <label for="grape">Grape</label>
  {{input type="text"
          class="form-control"
          id="grape"
          placeholder="Type of Grape"
          value=passwords.next}}
</div>

<div class="form-group">
  <label for="quantity">Quantity</label>
  {{input type="number"
          class="form-control"
          id="quantity"
          placeholder="Enter a Quantity"
          value=passwords.next}}
</div>

<button class="btn btn-primary" {{action "submit"}}>
  Submit
</button>

{{#link-to 'inventories'}}
<button class="btn btn-default">
  Cancel
</button>
{{/link-to}}
